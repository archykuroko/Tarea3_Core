@{
    ViewData["Title"] = "Estado de la Base de Datos";
}

<div class="container mt-5">
    <h2 class="text-center">Estado de la Base de Datos</h2>

    <div class="alert @(ViewBag.DatabaseStatus.Contains("✅") ? "alert-success" : "alert-danger") text-center">
        <h4>@ViewBag.DatabaseStatus</h4>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </div>
</div>

<!-- Agregar FontAwesome para iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
